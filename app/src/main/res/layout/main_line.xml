<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_row"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    tools:context="com.paradigmadigital.ui.main.MainActivity"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    >


    <ImageView
        android:id="@+id/avatar"
        android:src="@android:color/background_light"
        android:layout_width="@dimen/main_icon_width"
        android:layout_height="@dimen/main_icon_height"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="Post title, can expand up to two lines "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/avatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</android.support.constraint.ConstraintLayout>